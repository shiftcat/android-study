             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".FirstFragment">


    <TextView
            android:text="경북궁"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView"

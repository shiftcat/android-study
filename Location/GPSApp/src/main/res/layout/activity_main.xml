<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">


    <Button
            android:text="측정 시작"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textViewAllProviders"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textViewEnableProviders"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textViewPreviousLoc"
    />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textViewCurrentLoc"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textViewAccuracy"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textViewTime"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
</LinearLayout>